<div id='id-page-home'>

  <div id='id-container-headerbar'>
    <div class='headerbarInner'>
      <div id='id-button-search' class='search' type='text'>
        <%= image_tag asset_pack_path('src/imgs/icon/earth1.svg'), class: 'headerSearchIcon', alt: 'Logo' %>
        <div class='searchLabel'>请输入应用网址</div>
      </div>
      <div id='id-button-navigation' class='button'>
        <div class='buttonLine'></div>
        <div class='buttonLine'></div>
        <div class='buttonLine'></div>
      </div>
    </div>
  </div>

  <div id='id-container-mask' class='ztop mask'>
    <div class='ztop menu'>
      <a href='/mine' class="menucell">我的藏品</a>
      <a href='/history' class="menucell">我的足迹</a>
    </div>
  </div>

  <div id='id-container-banner'>
    <div class='banner'>
      <% @banners.each_with_index do |banner, index| %>
      <img class='bannerimg banneranime' src=<%=banner.image_url%> alt="">
      <% end %>
    </div>
  </div>

  <div id='id-container-dappblocks'>
    <% @dapps.keys.each_with_index do |key, index| %>
    <div class="block">
      <div class="header">
        <div class="headertitle">
          <%= key %>
        </div>
        <a href='<%= more_dapps_path(key) %>' class="buttonmore">更多</a>
      </div>

      <div class="dapplist">
        <% @dapps[key].each do |dapp| %>
         <a href="<%= dapp_path(dapp) %>">
          <div class="dapp">
            <img class="dappimg" src=<%=dapp.logo_url%>>
            <div class="dappinfo">
              <div class="dapptitle">
                <%=dapp.name%>
              </div>
              <div class="dappintro">东半球最最好玩的游戏</div>
            </div>
          </div>
        </a>
        <% end %>
      </div>

    </div>

    <% end %>
  </div>

</div>
</div>
